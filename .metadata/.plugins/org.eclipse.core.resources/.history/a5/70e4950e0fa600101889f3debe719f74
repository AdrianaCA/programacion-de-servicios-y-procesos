package ejercicios;

import java.util.ArrayList;
import java.util.Scanner;

public class Ejercicio2 {
	
	public static void main(String[] args) {
		ArrayList<Thread> hilos = new ArrayList<Thread>();
		
		Scanner sc = new Scanner(System.in);
		
		int opcion;
		String mensaje;
		
		do {
			
			
			System.out.println("Introduzca una opcion:");
			opcion = sc.nextInt();
			sc.nextLine();
			
			if(opcion != 0) {
				System.out.println("Introduzca un mensaje:");
				mensaje = sc.nextLine();
				
				if(opcion == 1) {
					Thread t = new HiloT(mensaje);
					t.start();
					hilos.add(t);
				} else if(opcion == 2) {
					Thread t = new Thread(new HiloR(mensaje));
					t.start();
					hilos.add(t);
				} else if(opcion == 3) {
					Thread tt1 = new HiloT(mensaje);
					Thread tt2 = new HiloT(mensaje);
					
					Thread tr1 = new Thread(new HiloR(mensaje));
					Thread tr2 = new Thread(new HiloR(mensaje));
					
					tt1.start();
					tt2.start();
					tr1.start();
					tr2.start();
					
					hilos.add(tt1);
					hilos.add(tt2);
					hilos.add(tr1);
					hilos.add(tr2);
				} else if(opcion == 4) {
					for(Thread hilo : hilos) {
						hilo.start();
					}
				} else {
					System.out.println("Opción incorrecta");
				}
			}
		} while(opcion != 0);
	}
	
	private static void enseñarMenu() {
		System.out.println("Menú:");
		System.out.println("1.Crear hilo que extienda Thread");
		System.out.println("2.Crear hilo que implemente Runnable");
		System.out.println("3.Crear dos hilos de cada tipo");
		System.out.println("4.Lanzar todos los hilos creados");
		System.out.println("0.Salir");
	}

}
