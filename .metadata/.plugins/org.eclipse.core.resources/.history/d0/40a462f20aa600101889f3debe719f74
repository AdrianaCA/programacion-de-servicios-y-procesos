package ejercicios;

import java.util.Scanner;

public class Ejercicio2 {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int opcion;
		
		do {
			System.out.println("Men√∫:");
			System.out.println("1.Crear hilo que extienda Thread");
			System.out.println("2.Crear hilo que implemente Runnable");
			System.out.println("3.Crear dos hilos de cada tipo");
			System.out.println("0.Salir");
			
			System.out.println("Introduzca una opcion:");
			opcion = sc.nextInt();
		} while(opcion != 0);
	}

}
