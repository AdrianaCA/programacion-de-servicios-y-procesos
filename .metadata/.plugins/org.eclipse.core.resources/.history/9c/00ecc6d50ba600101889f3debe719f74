package ejercicios;

import java.util.Scanner;

public class Ejercicio2 {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int opcion;
		String mensaje;
		
		do {
			System.out.println("Men√∫:");
			System.out.println("1.Crear hilo que extienda Thread");
			System.out.println("2.Crear hilo que implemente Runnable");
			System.out.println("3.Crear dos hilos de cada tipo");
			System.out.println("0.Salir");
			
			System.out.println("Introduzca una opcion:");
			opcion = sc.nextInt();
			sc.nextLine();
			
			if(opcion !=  0) {
				System.out.println("Introduzca un mensaje:");
				mensaje = sc.nextLine();
				
				if(opcion == 1) {
					HiloT ht = new HiloT(mensaje);
					ht.start();
				} else if(opcion == 2) {
					HiloR hr = new HiloR(mensaje);
					hr.run();
				} else if(opcion == 3) {
					HiloT ht1 = new HiloT(mensaje);
					HiloT ht2 = new HiloT(mensaje);
					
					HiloR hr1 = new HiloR(mensaje);
					HiloR hr2 = new HiloR(mensaje);
				}
			}
		} while(opcion != 0);
	}

}
